<RadzenStack Orientation="Orientation.Horizontal"
             AlignItems="AlignItems.Center"
             JustifyContent="JustifyContent.Center"
             Wrap="FlexWrap.Wrap"
             Gap="5px"
             Style="
                 max-width:480px;
                 margin:auto;
                 margin-top:5px;
                 max-height:40vh;
                 overflow-y:auto;
                 padding:1px;">

    @foreach (var avatar in Avatars)
    {
        <RadzenCard Style="@GetAvatarStyle(avatar)"
                    @onclick="() => SelectAvatarFunc(avatar)">

            <RadzenImage Path="@avatar"
                         Style="width:100%; height:100%; object-fit:cover;" />
        </RadzenCard>
    }
</RadzenStack>